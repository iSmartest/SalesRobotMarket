<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_main_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:paddingLeft="42px"
        android:paddingRight="42px"
        android:paddingTop="18px"
        android:paddingBottom="27px">
        <ImageView
            android:id="@+id/iv_newcar"
            android:layout_width="408px"
            android:layout_height="270px"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="@drawable/image_item_style"
            android:src="@drawable/car" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="54px"
            android:layout_toRightOf="@+id/iv_newcar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hotcarname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="全新奥迪A8L 驾驭明天的智慧"
                android:textColor="@color/title_color"
                android:textSize="42px" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_hotcaradapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

<include layout="@layout/v_horizontal_line"/>


</LinearLayout>