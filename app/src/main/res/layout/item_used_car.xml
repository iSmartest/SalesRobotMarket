<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_default"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center|left">
            <ImageView
                android:id="@+id/iv_tseond"
                android:layout_width="136dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:background="@drawable/image_item_style" />
            <LinearLayout
                android:id="@+id/ll_itemsecond"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_second1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奥迪A6L 2012款 35 FSI 舒适型"
                    android:textColor="@color/text_main_color"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_second2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上牌时间    2015-06"
                    android:textColor="@color/text_main_color"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_second3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公里表显里程  7.16万"
                    android:textColor="@color/text_main_color"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="10dp"  />

                <TextView
                    android:id="@+id/tv_second4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车主报价： ¥25.80 万 "
                    android:textColor="@color/text_main_color"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="10dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iv_secondright"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/label1" />

                <TextView
                    android:id="@+id/tv_item_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="急降"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/app_main_default"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_item_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="￥4000"
                    android:paddingTop="4dp"
                    android:gravity="center"
                    android:layout_below="@+id/tv_item_down"
                    android:textColor="@color/app_main_default"
                    android:textSize="15dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_second5"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_sideline"
                android:text="准新车"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:textSize="10dp"
                android:textColor="@color/text_main_color" />
        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/v_horizontal_line"/>
</LinearLayout>