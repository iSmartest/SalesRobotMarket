<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/rectangle"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.activity.RobotConsultActivity">

    <include layout="@layout/activity_base" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_this1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45px"
                android:textColor="@color/app_main_default"
                android:textSize="42px" />

            <TextView
                android:id="@+id/tv_robotan2"
                android:layout_width="759px"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="36px"
                android:textSize="42px" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_mic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/maike" />

            <TextView
                android:id="@+id/tv_rbcon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_mic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18px"
                android:text="点击上方麦克风开始语音咨询"
                android:textColor="@color/app_main_default" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="18px"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/maike"/>
            <ImageView
                android:id="@+id/iv_yinbo"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_ifly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音技术由科大讯飞提供"
                android:textColor="@color/app_main_default"
                android:layout_marginTop="118px"
                android:textSize="30px" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
